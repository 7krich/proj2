<form class="login-form">
    <h2>Login:</h2>
    <div>
        <label for="email-login">Email:</label>
        <input type="text" id="email-login" />
    </div>
    <div>
        <label for="password-login">Password:</label>
        <input type="password" id="password-login" />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
</form>

<form class="signup-form">
    <h2>Sign Up:</h2>
    <div>
        <label for="firstname-signup">First Name:</label>
        <input type="text" id="firstname-signup" />
    </div>
    <div>
        <label for="lastname-signup">Last Name:</label>
        <input type="text" id="lastname-signup" />
    </div>
    <div>
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" />
    </div>
    <div>
        <label for="email-signup">Email:</label>
        <input type="email" id="email-signup" />
    </div>
    <div>
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" />
    </div>
    <div>
        <button type="submit">Signup!</button>
    </div>
</form>
<script src="/javascript/login.js"></script>