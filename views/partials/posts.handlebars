<div class="row" id="content">
  <div class="medium-8 columns">
    <div class="blog-post">
      <a href="{{post_url}}" target="_blank"><h1>{{title}}</h1></a>
      <p>{{post_content}}</p>
      <div class="callout">
        <ul class="menu simple">
          <li>{{vote_count}} point(s) by {{user.username}} on
            {{created_at}}</li>
          <li><a href="/post/{{id}}">{{comments.length}} comment(s)</a></li>
          <li><button type="submit" id="up-vote-btn"></button></li>
          <li><button type="submit" id="down-vote-btn"></button></li>
        </ul>
      </div>
    </div>
  </div>
</div>