<div class="row" id="content">
  <div class="medium-8 columns">
    <div class="blog-post">
      <a href="/post/:{{post.id}}" target="_blank"><h1 class="singlePost">{{title}}</h1></a>
      <span>{{post_content}}</span>
      <div class="callout">
        <ul class="menu simple">
          <li>{{vote_count}} point(s) by {{user.name}} on {{created_at}}</li>
          <li><a href="/post/:{{id}}">{{comments.length}} comment(s)</a></li>
          <li><button type="submit" id="up-vote-btn"><i class="fa-solid fa-thumbs-up"></i></button></li>
          <li><button type="submit" id="down-vote-btn"><i class="fa-solid fa-thumbs-down"></i></i></button></li>
        </ul>
      </div>
    </div>
  </div>
</div>