<!--opens Modal-->
<div class="main">
  <div class="sub-main">
    <button class="button-two newpost" id="newpost"><span>New Post!</span></button>
  </div>
</div>

    <!-- The Modal -->
    <div id="newpost-popout" class="newpost-popout">

      <!-- Modal content -->
      <div class="newpost-content">
        <button class="close">Cancel</button>
        <section>
          <h2>Create New Post</h2>
          <form class="new-post-form">
            <div>
              <label for="post-title">Title</label>
              <input type="text" id="post-title" name="post-title" />
            </div>
            <div>
              <label for="post-content">Content</label>
              <input type="text" id="post-content" name="post-content" /></div>
              <label for="anonymous">Anonymous?</label>
            <input type="checkbox" id="anonymous" name="anonymous"/>
            <button type="submit" class="createbtn">Create</button>
          </form>
        </section>
      </div>
    </div>
    <script src="/javascript/add-post.js"></script>